doctype html
html
  head
    title="Snowflake Bot"
    meta(name="description" content="A private Discord bot for the AthenaUS and AikoBliss servers.")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="icon" type="image/jpg" href="../images/snowflake.jpg")
    link(rel="stylesheet" type="text/css" href="../styles/styles.css")
  body
    include ./header.pug
    #app
      canvas#snowCanvas
      .app-box
        if type === 'commands'
          include ./commands.pug
        else if type === 'dashboard'
          include ./dashboard.pug
        else if type === 'error'
          include ./error.pug
        else if type === 'faq'
          include ./faq.pug
        else if type === 'server'
          include ./server.pug
        else
          include ./landing.pug
    include ./footer.pug
    script(
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    )
    script(type="text/javascript" src="../scripts/snowflake.min.js")
    script(type="text/javascript" src="../scripts/snowfall.js")